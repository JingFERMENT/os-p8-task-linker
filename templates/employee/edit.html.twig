{% extends 'base.html.twig' %}

{% block title %}Liste des employ√©es
{% endblock %}

{% block header %}
	<h1>{{form.vars.value.firstname ~ ' ' ~ form.vars.value.lastname}}</h1>
{% endblock %}

{% block body %}
	{{form_start(form)}}
	{{form_row(form.lastname)}}
	{{form_row(form.firstname)}}
	{{form_row(form.email)}}
	<div class="form-flex">
		{{form_row(form.startDate)}}
		{{form_row(form.contract)}}
	</div>
	{{form_row(form.role)}}
	<button class="button button-submit">Enregistrer</button>
	{{form_end(form)}}
{% endblock %}
