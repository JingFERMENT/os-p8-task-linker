{% extends 'auth/base-logout.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <form action = "{{ path('app_login') }}" method="post">
        {% if error %}
            <div class="error-login">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal registration-title">Se connecter</h1>
        {# Email #}
        <label for="username">E-mail</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        {# Password #}
        <label for="password">Mot de passe</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button class="button button-submit" type="submit">
            Continuer
        </button>
        <a href="{{path('app_registration')}}">Pas de compte ? SÂ´inscrire </a>
    </form>
{% endblock %}
